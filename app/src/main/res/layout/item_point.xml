<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="73dp"
    >

  <TextView
      android:id="@+id/tvNumberPoint"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:textColor="@android:color/black"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="@+id/tvCoordinateX"
      app:layout_constraintEnd_toStartOf="@+id/tvCoordinateX"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tvCoordinateX"
      />

  <TextView
      android:id="@+id/tvCoordinateX"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="X ="
      app:layout_constraintBottom_toBottomOf="@+id/etCoordinateX"
      app:layout_constraintEnd_toStartOf="@+id/etCoordinateX"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="@+id/tvNumberPoint"
      app:layout_constraintTop_toTopOf="@+id/etCoordinateX"
      />
  <EditText
      android:id="@+id/etCoordinateX"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="number|numberDecimal"
      app:layout_constraintBottom_toBottomOf="@+id/tvCoordinateY"
      app:layout_constraintEnd_toStartOf="@+id/tvCoordinateY"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/tvCoordinateX"
      app:layout_constraintTop_toTopOf="@+id/tvCoordinateY"
      />
  <TextView
      android:id="@+id/tvCoordinateY"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="Y ="
      app:layout_constraintBottom_toBottomOf="@+id/etCoordinateY"
      app:layout_constraintEnd_toStartOf="@+id/etCoordinateY"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/etCoordinateX"
      app:layout_constraintTop_toTopOf="@+id/etCoordinateY"
      />
  <EditText
      android:id="@+id/etCoordinateY"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:inputType="number|numberDecimal"
      app:layout_constraintBottom_toBottomOf="@+id/fabMinus"
      app:layout_constraintEnd_toStartOf="@+id/fabMinus"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/tvCoordinateY"
      app:layout_constraintTop_toTopOf="@+id/fabMinus"
      />

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/fabMinus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      app:backgroundTint="@color/colorRed"
      app:fabSize="mini"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/etCoordinateY"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/minus"
      />
</android.support.constraint.ConstraintLayout>
